@model IEnumerable<SporsmalOgSvar>
@inject ISporsmalOgSvarRepository _sporsmalOgSvarRepository

@{
    ViewBag.Title = "Spørsmål og svar";
}
<link rel="stylesheet" href="~/css/site.css" />

<div style="text-align:center; margin-bottom:50px; margin-top:50px">
    <h1>Spørsmål Og Svar</h1>
</div>

<div style="text-align:center; margin-bottom:50px; margin-top:20px; margin-left:160px; margin-right:160px; font-size:20px">
<p>Velkommen til Finnreise's FAQ side. Her finner du spørsmål og svar relatert til vår nettside.
Dersom du ikke finner ditt spørsmål kan du sende inn et spørsmål til oss.</p>
</div>

<div style="margin-left:15%">
    <h3>Alle spørsmål</h3>
</div>

@foreach (var sporsmalOgSvar in Model)
{
<div id="accordion" style="margin-left:15%; margin-right:15%">
    <div class="card">
    <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#h@(sporsmalOgSvar.Id)" aria-expanded="false" aria-controls="h@(sporsmalOgSvar.Id)" data-parent="#accordion" style="text-decoration: none;">
            <div id="sporsmalTekst">@sporsmalOgSvar.Sporsmal</div>
        </button>
        </h5>
    </div>
    <div id="h@(sporsmalOgSvar.Id)" class="collapse" aria-labelledby="headingTwo">
        <div class="card-body">
            @sporsmalOgSvar.Svar
            <div>
                <div style="margin-top:20px; margin-bottom:10px">
                <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="EndreRating" asp-route-Id="@sporsmalOgSvar.Id" asp-route-rating="true"><i class="fa fa-thumbs-up"  ></i></a>
                @sporsmalOgSvar.PositivRating
                <a style="margin-left:5px" class="btn btn-sm btn-danger" asp-controller="Home" asp-action="EndreRating" asp-route-Id="@sporsmalOgSvar.Id" asp-route-rating="false"><i class="fa fa-thumbs-down"  ></i></a>
                @sporsmalOgSvar.NegativRating
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
}

<div style="text-align:center; margin-top:120px; margin-left:20%; margin-right:20%">
<h5>Fant du ikke spørsmålet ditt? Send inn ditt spørsmål her</h5>
</div>

<div style="text-align:center; margin-bottom:120px; margin-top:20px">
    <a asp-area="" asp-controller="Home" asp-action="LagSporsmal" class="btn btn-outline-dark btn-lg">Send inn et spørsmål</a>
</div>

